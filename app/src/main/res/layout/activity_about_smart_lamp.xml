<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutSmartLamp"
    android:background="@drawable/wwalpaper">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="12dp"
        android:background="@color/old_blue"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BackAboutLamp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/old_blue"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
            android:textColor="@color/white"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sharetech"
            android:text="Smart Lamp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/ToolbarLamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sharetech"
        android:text="Smart Gas"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/SmartGasImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lamp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SmartGasImage">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/old_blue"
            android:layout_margin="10dp"
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="A smart lamp is a type of lighting fixture that is connected to the internet and can be controlled remotely using a smartphone, or tablet. Smart lamps typically come with features such as adjustable brightness, color-changing capabilities, scheduling options, and integration with smart home systems like Amazon Alexa, Google Assistant, or Apple HomeKit. They often use technologies such as Wi-Fi, Bluetooth, or Zigbee to communicate with other smart devices and platforms. Smart lamps offer convenience, energy efficiency, and the ability to create customized lighting experiences based on personal preferences"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="23sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>